{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint"],
	"rules": {
		"semi": ["error", "never"],
		"quotes": ["error", "double"],
		"no-mixed-spaces-and-tabs": ["error"],
		"indent": ["error", "tab"]
	}
}
